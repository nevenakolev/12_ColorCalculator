<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="1.0" vgap="1.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllerview.Controller">
   <columnConstraints>
      <ColumnConstraints maxWidth="-Infinity" minWidth="-Infinity" />
      <ColumnConstraints />
      <ColumnConstraints maxWidth="145.0" minWidth="73.0" />
      <ColumnConstraints maxWidth="177.0" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" />
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" />
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" />
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" />
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" />
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" />
   </rowConstraints>
   <children>
      <Button fx:id="btn_redInc" mnemonicParsing="false" onMouseClicked="#hdl_changeRelative" prefHeight="60.0" prefWidth="150.0" text="+10" GridPane.columnIndex="1" />
      <Button fx:id="btn_redDec" mnemonicParsing="false" onMouseClicked="#hdl_changeRelative" prefHeight="60.0" prefWidth="150.0" text="-10" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Button fx:id="btn_greenInc" mnemonicParsing="false" onMouseClicked="#hdl_changeRelative" prefHeight="60.0" prefWidth="150.0" text="+10" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <Button fx:id="btn_greenDec" mnemonicParsing="false" onMouseClicked="#hdl_changeRelative" prefHeight="60.0" prefWidth="150.0" text="-10" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Button fx:id="btn_blueInc" mnemonicParsing="false" onMouseClicked="#hdl_changeRelative" prefHeight="60.0" prefWidth="150.0" text="+10" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <Button fx:id="btn_blueDec" mnemonicParsing="false" onMouseClicked="#hdl_changeRelative" prefHeight="60.0" prefWidth="150.0" text="-10" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <TextField fx:id="txtf_rgbValueRed" onKeyReleased="#hdl_changeAbsolute" prefHeight="60.0" prefWidth="150.0" GridPane.rowIndex="1" />
      <TextField fx:id="txtf_rgbValueGreen" onKeyReleased="#hdl_changeAbsolute" prefHeight="60.0" prefWidth="150.0" GridPane.rowIndex="3" />
      <TextField fx:id="txtf_rgbValueBlue" onKeyReleased="#hdl_changeAbsolute" prefHeight="60.0" prefWidth="150.0" GridPane.rowIndex="5" />
      <Label alignment="BOTTOM_LEFT" prefHeight="60.0" prefWidth="150.0" text=" Red">
         <padding>
            <Insets left="5.0" />
         </padding></Label>
      <Label alignment="BOTTOM_LEFT" prefHeight="60.0" prefWidth="150.0" text="Green" GridPane.rowIndex="2">
         <padding>
            <Insets left="5.0" />
         </padding></Label>
      <Label alignment="BOTTOM_LEFT" prefHeight="60.0" prefWidth="150.0" text="Blue" GridPane.rowIndex="4">
         <padding>
            <Insets left="5.0" />
         </padding></Label>
      <Button fx:id="btn_colorView" maxWidth="150.0" mnemonicParsing="false" prefHeight="182.0" prefWidth="150.0" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowSpan="3" />
      <TextField fx:id="txtf_hexValue" maxWidth="150.0" prefHeight="60.0" prefWidth="150.0" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="3" />
      <Button mnemonicParsing="false" onMouseClicked="#loadFromFile" prefHeight="60.0" prefWidth="75.0" text="Load" GridPane.columnIndex="2" GridPane.rowIndex="5" />
      <Button mnemonicParsing="false" onMouseClicked="#saveToFile" prefHeight="60.0" prefWidth="75.0" text="Save" GridPane.columnIndex="3" GridPane.rowIndex="5" />
   </children>
</GridPane>
